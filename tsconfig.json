{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2020",
    "strict": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/esm"
  },
  "include": [
    "index.ts",
    "lib/**/*.ts"
  ]
}
