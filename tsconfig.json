{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2020",
    "strict": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "include": [
    "index.ts",
    "lib/**/*.ts",
    "cli/*.js",
    "package.json"
  ]
}
