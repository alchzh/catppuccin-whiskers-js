{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2020",
    "strict": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist/"
  },
  "include": [
    "index.ts",
    "lib/**/*.{js,ts}",
    "package.json"
  ]
}
